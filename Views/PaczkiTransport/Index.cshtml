@model IEnumerable<Delivery.Models.PaczkiTransport>

    @{
    ViewData["Title"] = "Paczki Transport List";
    }

    <h1>Paczki Transport List</h1>

    <p style="float:left;">
        <a href="@Url.Action("Create", "PaczkiTransport")" class="btn btn-primary">Create New</a>
    </p>
    <p style="float:right;">
        <a href="@Url.Action("ExportToCsv", "PaczkiTransport")" class="btn btn-success">Download CSV</a>
    </p>


    <table class="table">
        <thead>
            <tr>
                <th>ID Paczki Transport</th>
                <th>ID Paczki</th>
                <th>Rozmiar Paczki</th>
                <th>ID Transport</th>
                <th>Data Odbioru</th>
                <th>Data Oddania</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID_paczki_transport</td>
                <td>@item.ID_paczki</td>
                <td>@item.Paczka?.Rozmiar</td> <!-- Display the Rozmiar from related Paczka -->
                <td>@item.ID_transport</td>
                <td>@item.DataOdbioru.ToString("yyyy-MM-dd")</td> <!-- Format the date -->
                <td>@item.DataOddania.ToString("yyyy-MM-dd")</td> <!-- Format the date -->
                <td>
                    <a href="@Url.Action("Details", "PaczkiTransport", new { id = item.ID_paczki_transport })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Delete", "PaczkiTransport", new { id = item.ID_paczki_transport })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
