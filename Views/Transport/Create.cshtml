@model Delivery.Models.Transport

@{
    ViewData["Title"] = "Create Transport";
}

<h2>Create Transport</h2>

<!-- Form to create a new Transport entity -->
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="ID_uzytkownika">ID Uzytkownika</label>
        <!-- Regular input field for User ID -->
        <input asp-for="ID_uzytkownika" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<!-- No validation error display here since validation is removed -->
