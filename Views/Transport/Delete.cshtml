@model Delivery.Models.Transport

@{
    ViewData["Title"] = "Delete Transport";
}

<h2>Delete Transport</h2>

<h3>Are you sure you want to delete this Transport?</h3>

<div>
    <h4>Transport Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.Uzytkownik?.Imie</dd>

    </dl>

    <!-- Form to confirm deletion -->
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()

        <!-- Pass the ID of the Transport to be deleted -->
        <input type="hidden" name="id" value="@Model.ID_transport" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
